# Uncomment the next line to define a global platform for your project
platform :ios, '15.0'

target 'PetActivityTracker' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for PetActivityTracker
  pod 'GoogleSignIn'
  pod 'FirebaseCore' # Core Firebase SDK
  pod 'FirebaseFirestore' # For Firestore Database
  pod 'FirebaseStorage' # For storing images/files
  pod 'FirebaseAuth' # Often used with Google Sign In for Firebase user management

end
